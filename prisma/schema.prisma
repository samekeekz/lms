// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = ["fullTextSearch"]
}

model Course {
  id          String  @id @default(uuid())
  userId      String
  title       String  @db.Text
  description String? @db.Text
  imageUrl    String? @db.Text
  price       Float?
  isPublished Boolean @default(false)

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  chapters    Chapter[]
  attachments Attachment[]
  purchases   Purchase[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
}

model Category {
  id      String   @id @default(uuid())
  name    String   @unique
  courses Course[]
}

model Attachment {
  id   String @id @default(uuid())
  name String
  url  String @db.Text

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
}

model Chapter {
  id          String  @id @default(uuid())
  title       String
  description String? @db.Text
  videoUrl    String? @db.Text
  position    Int
  isPublished Boolean @default(false)
  isFree      Boolean @default(false)

  muxData MuxData?
  quiz    Quiz?

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  userProgress UserProgress[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
}

model MuxData {
  id         String  @id @default(uuid())
  assetId    String
  playbackId String?

  chapterId String  @unique
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)
}

model UserProgress {
  id     String @id @default(uuid())
  userId String

  chapterId String
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, chapterId])
  @@index([chapterId])
}

model Purchase {
  id     String @id @default(uuid())
  userId String

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, courseId])
  @@index([courseId])
}

model StripeCustomer {
  id     String @id @default(uuid())
  userId String @unique

  stripeCustomerId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Quiz Model - One quiz per chapter
model Quiz {
  id                 String  @id @default(uuid())
  title              String
  description        String? @db.Text
  passingScore       Int     @default(70)
  timeLimit          Int?
  maxAttempts        Int?
  isPublished        Boolean @default(false)
  shuffleQuestions   Boolean @default(false)
  showCorrectAnswers Boolean @default(true)

  chapterId String  @unique
  chapter   Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  questions Question[]
  attempts  QuizAttempt[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([chapterId])
}

// Question Model - Multiple questions per quiz
model Question {
  id          String       @id @default(uuid())
  question    String       @db.Text
  type        QuestionType @default(MULTIPLE_CHOICE)
  points      Int          @default(1)
  position    Int
  explanation String?      @db.Text

  quizId String
  quiz   Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)

  options QuestionOption[]
  answers UserAnswer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([quizId])
}

// Enum for question types
enum QuestionType {
  MULTIPLE_CHOICE
  MULTIPLE_SELECT
  TRUE_FALSE
  SHORT_ANSWER
}

// Question Options - For multiple choice questions
model QuestionOption {
  id        String  @id @default(uuid())
  text      String  @db.Text
  isCorrect Boolean @default(false)
  position  Int

  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([questionId])
}

// Quiz Attempt - Track each student's quiz attempt
model QuizAttempt {
  id          String    @id @default(uuid())
  userId      String
  score       Float?
  isPassed    Boolean?
  isCompleted Boolean   @default(false)
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  timeSpent   Int?

  quizId String
  quiz   Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)

  answers UserAnswer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([quizId])
  @@index([userId])
}

// User Answer - Individual answers for each question
model UserAnswer {
  id              String   @id @default(uuid())
  userId          String
  selectedOptions String[]
  textAnswer      String?  @db.Text
  isCorrect       Boolean?
  pointsEarned    Int      @default(0)

  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  attemptId String
  attempt   QuizAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([questionId])
  @@index([attemptId])
  @@index([userId])
}

// Free Trial Access - Track users who have been granted free trial access
model FreeTrialAccess {
  id     String  @id @default(uuid())
  userId String  @unique
  email  String?

  // Which free course/quiz they have access to
  courseId String?

  // Track if they've used their free quiz attempt
  hasUsedFreeTrial Boolean @default(false)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  expiresAt DateTime?

  @@index([userId])
}

// ============================================
// STANDALONE FREE QUIZ (Not tied to courses)
// ============================================

// Free Quiz - Standalone quiz for new users
model FreeQuiz {
  id                 String  @id @default(uuid())
  title              String
  description        String? @db.Text
  passingScore       Int     @default(70)
  timeLimit          Int? // in minutes
  isPublished        Boolean @default(false)
  shuffleQuestions   Boolean @default(false)
  showCorrectAnswers Boolean @default(true)

  // Only one free quiz can be active at a time
  isActive Boolean @default(false)

  questions FreeQuizQuestion[]
  attempts  FreeQuizAttempt[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Free Quiz Question
model FreeQuizQuestion {
  id          String       @id @default(uuid())
  question    String       @db.Text
  type        QuestionType @default(MULTIPLE_CHOICE)
  points      Int          @default(1)
  position    Int
  explanation String?      @db.Text
  imageUrl    String?      @db.Text

  quizId String
  quiz   FreeQuiz @relation(fields: [quizId], references: [id], onDelete: Cascade)

  options FreeQuizOption[]
  answers FreeQuizAnswer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([quizId])
}

// Free Quiz Option
model FreeQuizOption {
  id        String  @id @default(uuid())
  text      String  @db.Text
  isCorrect Boolean @default(false)
  position  Int

  questionId String
  question   FreeQuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([questionId])
}

// Free Quiz Attempt
model FreeQuizAttempt {
  id          String    @id @default(uuid())
  userId      String
  score       Float?
  isPassed    Boolean?
  isCompleted Boolean   @default(false)
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  timeSpent   Int? // in seconds

  quizId String
  quiz   FreeQuiz @relation(fields: [quizId], references: [id], onDelete: Cascade)

  answers FreeQuizAnswer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([quizId])
  @@index([userId])
}

// Free Quiz Answer
model FreeQuizAnswer {
  id              String   @id @default(uuid())
  userId          String
  selectedOptions String[]
  textAnswer      String?  @db.Text
  isCorrect       Boolean?
  pointsEarned    Int      @default(0)

  questionId String
  question   FreeQuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  attemptId String
  attempt   FreeQuizAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([questionId])
  @@index([attemptId])
  @@index([userId])
}

// Lead Model - Store user contact information from landing page
model Lead {
  id               String  @id @default(uuid())
  name             String
  phoneNumber      String
  telegramNickname String? @db.Text
  email            String? @db.Text
  grade            String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([phoneNumber])
  @@index([createdAt])
}
